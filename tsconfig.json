{
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "jsx": "react",
    "module": "ESNext",
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es5",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "traceResolution": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "outDir": "build/dist",
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "types": [
      "jasmine"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "typings",
    "public"
  ]
}